# ─────────────────────────────────────────────
# Market Selection
# - Prefix mode:  btc-updown-15m / btc-updown-5m
# - Fixed mode:   full slug with timestamp suffix
# ─────────────────────────────────────────────
POLYMARKET_MARKET_SLUG="btc-updown-15m"

# WebSocket base URL (must include /ws; program appends /market or /user)
POLYMARKET_WS_BASE_URL="wss://ws-subscriptions-clob.polymarket.com/ws"
POLYMARKET_REST_URL="https://clob.polymarket.com"

# Live mode credentials
POLYMARKET_PRIVATE_KEY=""
POLYMARKET_FUNDER_ADDRESS=""

# Optional API credentials (if empty, program tries derive_api_key)
# POLYMARKET_API_KEY=""
# POLYMARKET_API_SECRET=""
# POLYMARKET_API_PASSPHRASE=""

# Runtime mode
PM_DRY_RUN=true
PM_ENTRY_GRACE_SECONDS=30

# Coordinator
PM_PAIR_TARGET=0.99
PM_BID_SIZE=1.0
PM_TICK_SIZE=0.001
PM_REPRICE_THRESHOLD=0.005
PM_DEBOUNCE_MS=200

# Inventory limits
PM_MAX_NET_DIFF=5
PM_MAX_PORTFOLIO_COST=1.02
PM_MAX_POSITION_VALUE=5

# OFI
PM_OFI_WINDOW_MS=3000
PM_OFI_TOXICITY_THRESHOLD=50
